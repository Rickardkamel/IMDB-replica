@model List<ImdbReplica.Models.ReviewViewModel>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<script src="~/Scripts/User.js"></script>*@

<h2>Your Reviews</h2>
<hr/>
<div>
    @Html.ActionLink("Create a new review", "NewReview", "Review", new {@class = "btn btn-info"})
</div>
<br/>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created</th>
            <th>Rating</th>
            <th>Total Rating</th>
            <th>Type</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Label(item.Title)
                </td>
                <td>
                    @Html.Label(item.Description)
                </td>
                <td>
                    @Html.Label(item.CreatedDate)
                </td>
                <td>
                    @if (item.UserRating == 1)
                    {
                        @Html.Label(item.UserRating.ToString() + " star")
                    }
                    else
                    {
                        @Html.Label(item.UserRating.ToString() + " stars")
                    }
                </td>
                <td>
                    @Html.Label(item.TotalRating.ToString("n1"))
                </td>
                <td>
                    @Html.Label(item.Type)
                </td>
                <td class="text-center">
                    <input class="selected-review-items" type="checkbox" value="@item.ReviewId" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditReview", "Review", new { item.ReviewId }, null)
                </td>
            </tr>
        }

    </table>

    <button id="remove-reviews" class="btn btn-warning">Remove selected reviews</button>
}
else
{
    <h3>Click on the button above to get started with your reviews.</h3>
}
