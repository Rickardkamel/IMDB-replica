@model ImdbReplica.Models.RegisterViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (@Html.BeginForm("RegisterUser", "Account"))
{

    <div class="form-horizontal">
        <h2 class="text-center">Register</h2>
        <div class="form-group">
            <label class="col-md-4 control-label" for="btn-login"></label>
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.Firstname, new { @class = "form-control input-md", @placeholder = "Firstname" })
                @Html.ValidationMessageFor(x => x.Firstname, null, new { @class = "ui-state-error-text" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="btn-login"></label>
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.Lastname, new { @class = "form-control input-md", @placeholder = "Lastname" })
                @Html.ValidationMessageFor(x => x.Lastname, null, new { @class = "ui-state-error-text" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="btn-login"></label>
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.Username, new {@class = "form-control input-md", @placeholder = "Username"})
                @Html.ValidationMessageFor(x => x.Username, null, new {@class = "ui-state-error-text"})
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="btn-login"></label>
            <div class="col-md-4">
                @Html.PasswordFor(x => x.Password, new { @min="6", @class = "form-control input-md", @placeholder = "Password" })
                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "ui-state-error-text" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="btn-login"></label>
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.Email, new { @type="email", @class = "form-control input-md", @placeholder="Email" })
                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "ui-state-error-text" })
            </div>
        </div>
        <p>
            @Html.ValidationMessage("AlreadyExistsError")
        </p>
        <div class="col-md-offset-7">
            <button id="btnRegisterNewUser" class="btn btn-info">Register</button>
        </div>
    </div>
}

